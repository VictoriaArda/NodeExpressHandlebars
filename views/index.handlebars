<div class="row text-white bg-dark mb-4">
  <div class="col-md-4 col-12 card-header">
    <img src="/assets/img/burgericon.png" class="img-fluid" height="180px">
  </div>
  <div class="col-md-8 col-12 card-header pt-4">
    <h1>Eat-Da-Burger!</h1>
    <h3>The burger tastes as good as being skinny feels!</h3>
  </div>
</div>
<div class="row">
  <div class="jumbtron">
    <div class="row mx-6 col-md-12">
      <div class="card border-0 rounded-2 mb-3 mx-4 id=" options"">
        <h2 class="card-header text-center">Place An Order</h2>
        <div class="card-body">
          <div class="card-text">
            <form class="create-form">
              <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="name">
              </div>
              <button type="submit" class="btn btn-outline-secondary rounded-0">Place Order</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="jumbtron">
    <div class="row mx-6 col-md-12">
      <div class="card border-0 rounded-2 mb-3 mx-4 id=" options"">
        <h2 class="card-header text-center">Ready to eat da burgers!</h2>
        <div class="card-body">
          <div class="card-text">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger devoured=true}}
            {{/unless}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="jumbtron">
    <div class="row mx-6 col-md-12">
      <div class="card border-0 rounded-2 mb-3 mx-4 id=" options"">
        <h2 class="card-header text-center">Devoured Burgers!</h2>
        <div class="card-body">
          <div class="card-text">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger devoured=false}}
            {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>